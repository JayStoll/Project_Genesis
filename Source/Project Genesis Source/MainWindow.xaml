                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF0047FF" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Image HorizontalAlignment="Left" Height="109" Margin="26,33,0,0" VerticalAlignment="Top" Width="102" Source="icon.png" Stretch="Fill"/>
