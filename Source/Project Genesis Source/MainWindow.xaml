<Window x:Name="HomePage" x:Class="Project_Genesis_Source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Genesis_Source"
        mc:Ignorable="d"
        Title="CAJN Software" Width="990" Height="579">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" SnapsToDevicePixels="true" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" StrokeThickness="1" StrokeDashArray="1 2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="ButtonRoundEdges" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid x:Name="border" SnapsToDevicePixels="true">
                            <Rectangle HorizontalAlignment="Stretch" Height="Auto" Margin="21,15,-20.333,0" VerticalAlignment="Stretch" Width="Auto" RadiusY="16.034" RadiusX="16.034" StrokeThickness="2" Stroke="{x:Null}">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                        <GradientStop Color="#FF75ACE4" Offset="0.5"/>
                                        <GradientStop Color="White" Offset="0.18"/>
                                        <GradientStop Color="White" Offset="0.828"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Stretch" Margin="41.334,37.782,0,21.884" Height="Auto" Width="Auto" HorizontalAlignment="Stretch" FlowDirection="LeftToRight"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true"/>
                            <Trigger Property="IsMouseOver" Value="true"/>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Window.Foreground>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF0047FF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Foreground>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="#FF0047FF"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FF98C7F7"/>
                <GradientStop Color="#FF5795D3" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="336*"/>
            <ColumnDefinition Width="459*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Invoice Generator  " Grid.Column="1" Margin="174,0,83.201,416" FontFamily="HarvestItal" FontSize="65" TextOptions.TextHintingMode="Fixed" Background="{x:Null}" FontWeight="Bold" Foreground="#FF0C1249" Grid.ColumnSpan="2"/>
        <Image Height="132" Margin="20,20,36.799,0" VerticalAlignment="Top" Source="icon.png" Stretch="Fill"/>
        <Button Content="Home" Margin="20,164.687,36.799,0" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top" BorderBrush="{x:Null}"/>
        <Button x:Name="createInv" Content="Create Invoice" Margin="20,209.687,36.799,0" BorderBrush="{x:Null}" Click="createInv_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top">
            <!--   <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF0047FF" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground> (Description: The objkect 'Button' already has achild and cannot add 'Button'. 'Button' can accept only one child) -->
        </Button>
        <Button x:Name="customerAdd" Content="Add Customer" Margin="20,254.687,36.799,0" BorderBrush="{x:Null}" Click="customerAdd_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="vehicleAdd" Content="Add Vehicle" Margin="20,299.687,36.799,0" BorderBrush="{x:Null}" Click="vehicleAdd_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="addPart" Content="Add Part" Margin="20,344.687,36.799,0" BorderBrush="{x:Null}" Click="addPart_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="clientManage" Content="Manage Clients" Margin="20,389.687,36.799,0" BorderBrush="{x:Null}" Click="clientManage_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="40" VerticalAlignment="Top"/>
        <Button x:Name="backupTab" Content="Backup/&#xD;&#xA;Archive" Margin="20,434.687,36.799,0" BorderBrush="{x:Null}" Click="backupTab_Click" Background="{x:Null}" Foreground="#FF0C1249" FontSize="18" FontFamily="PenultimateLightItal" FontWeight="Bold" Height="50" VerticalAlignment="Top"/>
        <Button x:Name="createInv1" Content="Create Invoice" Margin="10,154.687,26,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontFamily="Toledo" FontSize="35" Click="createInv1_Click" Foreground="#FF0C1249" Grid.Column="1" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="addCust1" Content="Add Customer" Grid.Column="2" Margin="40.799,154.687,118.201,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontSize="35" FontFamily="Toledo" Click="addCust1_Click" Foreground="#FF0C1249" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="addVehicle1" Content="Add Vehicle" Grid.Column="1" Margin="10,264.687,26,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontSize="35" FontFamily="Toledo" Click="addVehicle1_Click" Foreground="#FF0C1249" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="addPart1" Content="Add Part" Margin="40.799,264.687,118.201,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontFamily="Toledo" FontSize="35" Click="addPart1_Click" Foreground="#FF0C1249" Grid.Column="2" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="manageClient1" Content="Manage Client" Grid.Column="1" Margin="10,374.687,26,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontFamily="Toledo" FontSize="35" Click="manageClient1_Click" Foreground="#FF0C1249" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="backup1" Content="Backup" Grid.Column="2" Margin="40.799,374.687,118.201,0" Background="{x:Null}" Padding="2,2,2,0" Style="{DynamicResource ButtonRoundEdges}" FontFamily="Toledo" FontSize="35" Click="backup1_Click" Foreground="#FF0C1249" FontStyle="Italic" Height="110" VerticalAlignment="Top">
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Label Content="CAJN " Grid.Column="1" Margin="10,34.003,107.779,428.997" Foreground="#FF0C1249" FontSize="72" FontFamily="Splash"/>
    </Grid>
</Window>
