      Title="CreateInvoice1" Width="1000" Height="500">

    <Grid>
        <ScrollViewer Margin="-0.108,1,6.341,6.5" VerticalScrollBarVisibility="Auto" RenderTransformOrigin="0.5,0.5">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.282"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.995"/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <SelectiveScrollingGrid Height="1312" Width="993.767">
                <Rectangle Margin="10,10,54.608,0" RadiusY="12.029" RadiusX="12.029" Stroke="Black" Height="95" VerticalAlignment="Top">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                            <GradientStop Color="#FFBBCEE6"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="95" Margin="10,527,54.608,0" VerticalAlignment="Top" RadiusY="12.029" RadiusX="12.029" Stroke="Black">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                            <GradientStop Color="#FFBBCEE6"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <ComboBox x:Name="VehicleDropDown" Height="75" Margin="26.321,537,67.951,0" VerticalAlignment="Top" FontSize="35" SelectionChanged="ComboBox_SelectionChanged"/>
                <ComboBox x:Name="ClientDropDown" Text="Search Client Name..." Height="75" Margin="26.321,20,67.557,0" VerticalAlignment="Top" FontSize="35" SelectionChanged="ComboBox_SelectionChanged" Opacity="0.5"/>


                <Label Content="First Name" Margin="24.524,120,0,0" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold" Height="75" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300"/>
                <TextBox x:Name="CusFNameTxt" Margin="375.819,120,67.951,0" TextWrapping="Wrap" FontSize="35" FontFamily="Palatino Linotype" Height="75" VerticalAlignment="Top" IsEnabled="False"/>


                <Label Content="Last Name" HorizontalAlignment="Left" Height="75" Margin="24.524,210,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusLnameTxt" Height="75" Margin="375.818,210,67.952,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False"/>


                <Label Content="Address" HorizontalAlignment="Left" Height="75" Margin="24.524,300,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusAddressTxt" Height="75" Margin="375.819,300,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False"/>


                <Label Content="Phone Number" HorizontalAlignment="Left" Height="75" Margin="24.524,390,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusPhoneTxt" Height="75" Margin="375.819,390,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False"/>


                <Label Content="Serial Number" HorizontalAlignment="Left" Height="75" Margin="24.524,637,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="375.819,637,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False"/>


                <Label Content="Parts" HorizontalAlignment="Left" Height="75" Margin="24.524,727,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="375.819,727,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="35" FontFamily="Palatino Linotype" IsEnabled="False"/>


                <Label Content="Labour" HorizontalAlignment="Left" Height="75" Margin="24.524,817,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="375.819,817,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False"/>




                <Label Content="Type" HorizontalAlignment="Left" Height="75" Margin="24.524,952,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="typeTxt" LostFocus="typeTxt_LostFocus" Height="75" Margin="375.819,957,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35"/>
                <TextBox x:Name="typeTxtWatermark" GotFocus="typeTxtWatermark_GotFocus" Text="ex: Truck" Height="75" Margin="375.819,957,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Opacity="0.5" IsTabStop="False" HorizontalAlignment="Left" Width="549.996"/>


                <Label Content="Rate" HorizontalAlignment="Left" Height="75" Margin="24.524,1047,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="rateTxt" LostFocus="rateTxt_LostFocus" Height="75" Margin="375.819,1047,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35"/>
                <TextBox x:Name="rateTxtWatermark" GotFocus="rateTxtWatermark_GotFocus" Text="ex: 18%" Height="75" Margin="375.819,1047,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Opacity="0.5" HorizontalAlignment="Left" Width="549.996"/>


                <Label Content="GST / HST" HorizontalAlignment="Left" Height="75" Margin="24.523,1137,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="gstTxt" LostFocus="gstTxt_LostFocus" Height="75" Margin="375.818,1137,69.748,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsTabStop="False"/>
                <TextBox x:Name="gstTxtWatermark" GotFocus="gstTxtWatermark_GotFocus" Text="ex: $##.##" Height="75" Margin="375.819,1137,69.748,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Opacity="0.5"/>


                <TextBox Height="10" Margin="23.47,492,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="20" IsEnabled="False" Background="White" Opacity="0.5" IsTabStop="False"/>


                <Button Content="Create Invoice" Margin="625.816,1242,69.748,10" FontFamily="Lithos Pro Regular" FontSize="35" Background="{x:Null}">
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FF1397F1" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
                <TextBox Height="10" Margin="23.47,920,67.951,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="20" IsEnabled="False" Background="White" Opacity="0.5" IsTabStop="False"/>
            </SelectiveScrollingGrid>
        </ScrollViewer>
    </Grid>
</Page>
