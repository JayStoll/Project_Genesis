<Page x:Class="Project_Genesis_Source.CreateInvoice1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_Genesis_Source"
      mc:Ignorable="d"
      Title="CreateInvoice1" Width="1432" Height="780">

    <Grid>
        <ScrollViewer Margin="-0.123,1,6.356,12.5" VerticalScrollBarVisibility="Hidden" RenderTransformOrigin="0.5,0.5">
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.282"/>
                    <RotateTransform/>
                    <TranslateTransform X="1.995"/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>
            <SelectiveScrollingGrid Height="1312" Width="1411.424">
                <Rectangle Margin="10,10,10,0" RadiusY="12.029" RadiusX="12.029" Stroke="Black" Height="95" VerticalAlignment="Top">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                            <GradientStop Color="#FFBBCEE6"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <Rectangle Height="95" Margin="10,527,10,0" VerticalAlignment="Top" RadiusY="12.029" RadiusX="12.029" Stroke="Black">
                    <Rectangle.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FFF0F0F0" Offset="1"/>
                            <GradientStop Color="#FFBBCEE6"/>
                        </RadialGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <ComboBox x:Name="SearchBar1" LostFocus="SearchBar1_LostFocus" Height="75" Margin="24.524,21.391,25.562,0" VerticalAlignment="Top" FontSize="35" SelectionChanged="ComboBox_SelectionChanged"/>
                <ComboBox x:Name="SearchBar1Watermark" GotFocus="SearchBar1Watermark_GotFocus" Text="Search Client Name..." Height="75" Margin="24.524,21.391,25.562,0" VerticalAlignment="Top" FontSize="35" SelectionChanged="ComboBox_SelectionChanged" Opacity="0.5"/>


                <Label Content="First Name" Margin="24.524,120,0,0" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold" Height="75" VerticalAlignment="Top" HorizontalAlignment="Left" Width="300"/>
                <TextBox x:Name="CusFNameTxt" Margin="407.853,120,25.562,0" TextWrapping="Wrap" FontSize="35" FontFamily="Palatino Linotype" Height="75" VerticalAlignment="Top" IsEnabled="False"/>


                <Label Content="Last Name" HorizontalAlignment="Left" Height="75" Margin="24.524,210,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusLnameTxt" Height="75" Margin="407.853,210,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False" Width="978.009"/>


                <Label Content="Address" HorizontalAlignment="Left" Height="75" Margin="24.524,300,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusAddressTxt" Height="75" Margin="407.853,300,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False" Width="978.009"/>


                <Label Content="Phone Number" HorizontalAlignment="Left" Height="75" Margin="24.524,390,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="CusPhoneTxt" Height="75" Margin="407.853,390,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False" Width="978.009"/>


                <ComboBox Height="75" Margin="24.524,537.5,25.562,0" VerticalAlignment="Top" FontSize="35" SelectionChanged="ComboBox_SelectionChanged_1"/>


                <Label Content="Serial Number" HorizontalAlignment="Left" Height="75" Margin="24.524,637,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="407.853,637,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False" Width="978.009"/>


                <Label Content="Parts" HorizontalAlignment="Left" Height="75" Margin="24.524,727,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="407.853,727,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="35" FontFamily="Palatino Linotype" IsEnabled="False" Width="978.009"/>


                <Label Content="Labour" HorizontalAlignment="Left" Height="75" Margin="24.524,817,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox Height="75" Margin="407.853,817,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" IsEnabled="False" Width="978.009"/>




                <Label Content="Type" HorizontalAlignment="Left" Height="75" Margin="24.524,952,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="typeTxt" LostFocus="typeTxt_LostFocus" Height="75" Margin="407.853,957,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Width="978.009"/>
                <TextBox x:Name="typeTxtWatermark" GotFocus="typeTxtWatermark_GotFocus" Text="ex: Truck" Height="75" Margin="407.853,957,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Width="978.009" Opacity="0.5"/>


                <Label Content="Rate" HorizontalAlignment="Left" Height="75" Margin="24.524,1047,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="rateTxt" LostFocus="rateTxt_LostFocus" Height="75" Margin="407.853,1047,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Width="978.009"/>
                <TextBox x:Name="rateTxtWatermark" GotFocus="rateTxtWatermark_GotFocus" Text="ex: 18%" Height="75" Margin="407.853,1047,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="35" Width="978.009" Opacity="0.5"/>


                <Label Content="GST / HST" HorizontalAlignment="Left" Height="75" Margin="24.523,1137,0,0" VerticalAlignment="Top" Width="300" FontFamily="Lithos Pro Regular" FontSize="35" FontWeight="Bold"/>
                <TextBox x:Name="gstTxt" LostFocus="gstTxt_LostFocus" Height="75" Margin="407.852,1137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="978.01" FontFamily="Palatino Linotype" FontSize="35"/>
                <TextBox x:Name="gstTxtWatermark" GotFocus="gstTxtWatermark_GotFocus" Text="ex: $##.##" Height="75" Margin="407.852,1137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Width="978.01" FontFamily="Palatino Linotype" FontSize="35" Opacity="0.5"/>


                <TextBox Height="10" Margin="23.47,492,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="20" IsEnabled="False" Background="White" Opacity="0.5" IsTabStop="False"/>


                <Button Content="Create Invoice" Margin="1085.862,1237,0,0" FontFamily="Lithos Pro Regular" FontSize="35" HorizontalAlignment="Left" Width="300" Height="60" VerticalAlignment="Top" Background="{x:Null}">
                    <Button.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FF1397F1" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.BorderBrush>
                </Button>
                <TextBox Height="10" Margin="23.47,920,25.562,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Palatino Linotype" FontSize="20" IsEnabled="False" Background="White" Opacity="0.5" IsTabStop="False"/>
            </SelectiveScrollingGrid>
        </ScrollViewer>

    </Grid>
</Page>
